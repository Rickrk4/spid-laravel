{
  "name": "italia/spid-laravel",
  "description": "Laravel 5 Package for SPID authentication",
  "keywords": ["SPID", "Laravel", "Laravel 5"],
  "homepage": "https://github.com/italia/spid-laravel",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Davide Porrovecchio - Agenzia per l'Italia Digitale - Team per la Trasformazione Digitale",
      "email": "davide.porrovecchio@agid.gov.it"
    }
  ],
  "require": {
    "php": ">=7.0.0",
    "illuminate/config": "~5.0",
    "illuminate/support": "~5.0",
    "onelogin/php-saml": "dev-remove_mcrypt",
    "cweagans/composer-patches": "^1.6"
  },
  "require-dev": {
    "pds/skeleton": "~1.0",
    "phpunit/phpunit": "^6.5",
    "orchestra/testbench": "~3.0",
    "mockery/mockery": "^1.0",
    "mikey179/vfsStream": "^1.6",
    "friendsofphp/php-cs-fixer": "^2.11"
  },
  "autoload": {
    "psr-4": {
      "Italia\\SPIDAuth\\": "src/"
    }
  },
  "extra": {
    "laravel": {
        "providers": [
            "Italia\\SPIDAuth\\ServiceProvider"
        ]
    },
    "patches": {
      "onelogin/php-saml": {
        "Compatibility with SPID": "https://gist.githubusercontent.com/pdavide/53c4f9c5e3dc81ce235516e7077248e9/raw/f7071f1657a68eeb2a15455eef3e4ace8edc182f/php-saml-remove_mcrypt-spid.patch"
      }
    }
  }
}
